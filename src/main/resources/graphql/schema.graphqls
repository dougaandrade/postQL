input PostInput {
  title: String!
  content: String!
}
input PostUpdateInput {
  title: String!
  content: String!
}

type Post {
  id: String!
  title: String!
  content: String!
}

type Mutation {
  createPost(post: PostInput): Post
  updatePost(id: ID!, post: PostUpdateInput!): Post
}

type Query {
  allPosts: [Post]
  postById(id: ID!): Post
}
